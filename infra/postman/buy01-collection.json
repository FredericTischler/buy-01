{
  "info": {
    "name": "Buy01 API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register Seller",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/users/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"seller@example.com\",\n  \"password\": \"StrongPass123!\",\n  \"firstName\": \"Ada\",\n  \"lastName\": \"Lovelace\",\n  \"role\": \"SELLER\"\n}"
        }
      }
    },
    {
      "name": "Login Seller",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"seller@example.com\",\n  \"password\": \"StrongPass123!\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Create Product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Laptop\",\n  \"description\": \"Puissant et l√©ger\",\n  \"price\": 999.99,\n  \"mediaIds\": [\"{{mediaId}}\"]\n}"
        }
      }
    },
    {
      "name": "Public Product Listing",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/products",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products"]
        }
      }
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [""],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [""],
        "type": "text/javascript"
      }
    }
  ]
}
